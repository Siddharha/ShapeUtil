    <in.creativelizard.shapeutil.CircleView
        android:id="@+id/imgPerson"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:draw_img_back="@drawable/person"
        app:feel_back_color="#c2c2c2"
        app:feel_color="true"
        app:feel_type="resize_center_with_ratio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:src="@color/colorPrimary"
        app:stroke_size="10" />

    <in.creativelizard.shapeutil.FitDoughnut
        android:id="@+id/cdChart"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:fdColorPrimary="#00bcd4"
        app:fdColorSecondary="#c2c2c2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPerson" />

